<%- include('../layouts/header.ejs') %>

<!-- Page content -->
<div class="content">
    <div class="play-video-container">
        <h3>Play Video</h3>
        <div>      
            <% if (showList != undefined && showList.length == 1) { %>
              <iframe width="500" height="315" src="https://www.youtube.com/embed/<%= showList[0].id.videoId %>" frameborder="0" allow="autoplay;encrypted=media" allowfullscreen></iframe>
            <% } %>
        </div>
    </div>        
    <div class="related-video-container">
      <h3>Related Video List:</h3>
      <div class="related-video-content">
        <% if (searchList != undefined && searchList.length > 0) { %>
          <% searchList.forEach(function(list){ %>
            <article>
              <img src="<%= list.snippet.thumbnails.default.url %>" width="<%= list.snippet.thumbnails.default.width %>"  height="<%= list.snippet.thumbnails.default.height %>" alt="" class="thumb">
              <h4><%= list.snippet.title %></h4>
              <div>
                <p><%= list.snippet.description %></p>
              </div>
            </article>
          <% }) %>
          <% } %>
        </div>      
    </div>
</div>

<%- include('../layouts/footer.ejs') %>