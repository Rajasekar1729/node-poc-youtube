<%- include('../layouts/header.ejs') %>


    <div class="content">
        <div class="row" style="padding-bottom: 10px;">
            <u><h2 class="text-center">User Edit</h2></u>
        </div>
        <div class="row">
            <div class="col-md-12">
                    <form action="/users/update/<%= user.id %>" method="post">
                            <div class="form-group row">
                              <div class="col-sm-6">
                                <label for="nametxt">Username:</label>
                                <input type="text" readonly name="username" class="form-control" id="nametxt" value="<%= user.username  %>" aria-describedby="text" placeholder="Enter name">                                
                              </div>
                              <div class="col-sm-6" style="margin-top: 28px;">
                                <label for="activeChk">Active:</label>                                
                                <input type="checkbox" required name="isActive" class="custom-control-label" id="activeChk" checked="<%= user.isActive  %>">
                              </div> 
                            </div>
                            <div class="form-group row">
                              <div class="col-sm-6">
                                <label for="emailtxt">Email address:</label>
                                <input type="email" required class="form-control" name="email" id="emailtxt" value="<%= user.email  %>" aria-describedby="emailHelp" placeholder="Enter email">
                              </div>                                    
                            </div> 
                            <div class="form-group row">
                              <div class="col-sm-6">
                                <label for="firstnametxt">Firstname:</label>
                                <input type="text" required name="firstname" class="form-control" id="firstnametxt" value="<%= user.firstname  %>" aria-describedby="text" placeholder="Enter Firstname">                                
                              </div>
                            </div>
                            <div class="form-group row">
                              <div class="col-sm-6">
                                <label for="lastnametxt">Lastname:</label>
                                <input type="text" required class="form-control" name="lastname" id="lastnametxt" value="<%= user.lastname  %>" aria-describedby="emailHelp" placeholder="Enter Lastname">
                              </div>                                    
                            </div>                               
                            <!-- <div class="form-group">
                                    <label for="nametxt">Age</label>
                                    <input type="text" required class="form-control" id="agetxt" name="age" value="<%= user.age  %>" aria-describedby="text" placeholder="Enter age">                                
                            </div> -->
                            <button id="updateBtn" type="submit" class="btn btn-primary">Submit</button>
                    </form>
            </div>
        </div>
    </div>
    <input type="hidden" id="userId" name="userId" value="<%= user.id %>">

<%- include('../layouts/footer.ejs') %> 